<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    background-color: #f8f9fa;
    margin: 0;
  }

  .sidebar {
    margin-top: 2%;
    position: fixed;
    top: 56px; /* Offset for topbar */
    left: 0;
    width: 260px;
    background-color: #ffffff;
    border-right: 1px solid #dee2e6;
    padding: 2rem 1.5rem;
    z-index: 1000; /* Make sure it’s above content but below topbar */
    transition: transform 0.3s ease-in-out;
    overflow-y: auto;
  }

  .profile-img {
    width: 100px;
    height: 100px;
    background-color: #6c757d;
    border-radius: 50%;
    background-position: center;
    background-size: cover;
    margin: 0 auto;
    border: 2px solid #343a40;
  }

  .btn-profile {
    margin-top: 0.5rem;
    font-weight: 500;
    pointer-events: none;
    background-color: #343a40;
    color: #fff;
    border: none;
  }

  .sidebar .nav-link {
    color: #343a40;
    font-weight: 500;
    padding: 0.5rem 0;
    border-radius: 5px;
    transition: background-color 0.2s ease, color 0.2s ease;
    display: block;
  }

  .sidebar .nav-link:hover {
    background-color: #343a40;
    color: #ffffff;
    text-decoration: none;
  }

  .sidebar .nav-link.active {
    font-weight: bold;
    background-color: #495057;
    color: #ffffff;
  }

  .sidebar h6 {
    font-size: 0.85rem;
    letter-spacing: 0.05em;
    font-weight: bold;
    color: #6c757d;
    text-transform: uppercase;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .sidebar {
      top: 0;
      width: 100%;
      transform: translateX(-100%);
      position: fixed;
    }

    .sidebar.show {
      transform: translateX(0);
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.15);
      z-index: 1050;
    }
  }

  .content-wrapper {
    margin-left: 260px;
    padding: 1.5rem;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      margin-left: 0;
      padding: 1rem;
    }
  }

  #sidebarToggle {
    background-color: #343a40;
    color: #ffffff;
    border: none;
    position: relative;
    z-index: 1101;
  }
</style>

<div class="top">
  <button class="btn d-md-none m-3" type="button" id="sidebarToggle">☰ Account Menu</button>

  <div class="sidebar bg-white" id="accountSidebar">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-transparent p-0 mb-4">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">My Account</li>
      </ol>
    </nav>

    <div class="text-center mb-4">
      <div class="profile-img"></div>
      <button class="btn btn-profile btn-sm"><%= user.firstName || "Customer Name" %></button>
    </div>

    <hr />

    <h6>Manage My Account</h6>
    <ul class="nav flex-column mb-4">
      <li class="nav-item">
        <a class="nav-link" href="/account">My Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/address">Address Book</a>
      </li>
    </ul>

    <h6>My Orders</h6>
    <ul class="nav flex-column mb-3">
      <li class="nav-item">
        <a class="nav-link" href="/account/orders">My Orders</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/wishlist">My WishList</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/wallet">Wallet</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/coupons">Coupons</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/referrals">Referrals</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-danger" href="/logout">Logout</a>
      </li>
    </ul>
  </div>

  <script>
    const sidebarToggle = document.getElementById('sidebarToggle');
    const accountSidebar = document.getElementById('accountSidebar');

    sidebarToggle.addEventListener('click', () => {
      accountSidebar.classList.toggle('show');
    });
  </script>
</div>
