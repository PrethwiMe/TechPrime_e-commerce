<style>
  .topBar {
    z-index: 1100; /* Higher than sidebar (1000) */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    margin: 0%;
  }

  .navbar {
    z-index: 1100; /* Higher than sidebar (1000) */
    position: fixed;
    top: 36px; /* Below offer bar (approximate height) */
    left: 0;
    width: 100%;
        margin: 0%;

  }

  /* Add padding to body to prevent content from being hidden under fixed header */
  body {
    padding-top: 90px; /* Adjust based on total header height (offer bar + navbar) */
        margin: 0%;

  }

  @media (max-width: 768px) {
    body {
      padding-top: 80px; /* Slightly less for mobile due to responsive adjustments */
    }
  }
</style>

<!-- Offer Bar -->
<div class="topBar bg-black text-white text-center py-2 small position-fixed">
  <span>
    Summer Sale For All merch And Free Express Delivery - OFF 10%!
    <a href="/search" class="text-white fw-bold text-decoration-underline ms-1">ShopNow</a>
  </span>
  <div class="position-absolute top-0 end-0 h-100 d-none d-md-flex align-items-center me-4">
    <select class="form-select form-select-sm bg-black text-white border-0" style="width: auto;">
      <option selected>English</option>
    </select>
  </div>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-white py-3 border-bottom shadow-sm position-fixed">
  <div class="container-fluid px-4">
    <!-- Sidebar Toggle (Mobile) -->
    <button class="btn d-md-none me-2" type="button" id="sidebarToggle">
      <i class="bi bi-list fs-5"></i>
    </button>

    <!-- Logo -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
      <i class="bi bi-laptop me-2"></i> TECHPRIME
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarContent">
      <!-- Center Nav -->
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0 text-center">
     
      </ul>

      <!-- Right Section -->
      <div class="d-lg-flex align-items-center gap-3 ms-lg-3">
        <!-- Search -->
        <form class="d-flex mb-2 mb-lg-0" role="search" action="/search" method="GET">
          <input class="form-control rounded-start" type="search" name="searchKey" placeholder="What are you looking for?" aria-label="Search">
          <button class="btn btn-outline-secondary rounded-end" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </form>

        <!-- Icons -->
        <div class="d-flex align-items-center gap-3">
          <a href="/viewWishList" class="text-dark"><i class="bi bi-heart fs-5"></i></a>
          <a href="/cart" class="text-dark"><i class="bi bi-cart fs-5"></i></a>

          <!-- User Dropdown -->
          <div class="dropdown">
            <a href="#" class="text-dark d-flex align-items-center dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle fs-4"></i>
              <% if (user && user.firstName) { %>
                <span class="ms-2 fw-medium"><%= user.firstName %></span>
              <% } %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <% if (user && user.firstName) { %>
                <li class="dropdown-header fw-bold">Hi, <%= user.firstName %>!</li>
                <li><a class="dropdown-item" href="/account/orders">My Orders</a></li>
                <li><a class="dropdown-item" href="/account">Manage Account</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a></li>
              <% } else { %>
                <li><a class="dropdown-item" href="/login">Login</a></li>
                <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-white border-0 shadow-lg">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to logout?
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Ensure dropdowns work on all pages -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.dropdown-toggle').forEach(drop => {
      new bootstrap.Dropdown(drop);
    });
  });
</script>