<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>My Orders â€¢ Account</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
      body {
        background: #fff;
        color: #212529;
      }
      a, a:hover, a:focus {
        color: #0d6efd;
      }

      .content-wrapper {
        margin-left: 260px;
        padding: 1.5rem;
      }
      @media (max-width: 768px) {
        .content-wrapper {
          margin-left: 0;
          padding: 1rem;
        }
      }

      .page-header {
        border-bottom: 1px solid #dee2e6;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
      }
      .page-header h1 {
        color: #000;
      }

      .card-light {
        background: #fff;
        border: 1px solid #dee2e6;
      }
      .table-lightish {
        --bs-table-bg: transparent;
        --bs-table-striped-bg: rgba(0,0,0,0.03);
        --bs-table-hover-bg: rgba(0,0,0,0.05);
        color: #212529;
        border-color: #dee2e6;
      }

      .badge-status {
        font-weight: 600;
        letter-spacing: .02em;
      }
      .badge-status.shipped { background-color: #e7f3fe; color: #0d6efd; }
      .badge-status.delivered { background-color: #e6f4ea; color: #198754; }
      .badge-status.processing { background-color: #fff3cd; color: #856404; }
      .badge-status.cancelled { background-color: #f8d7da; color: #842029; }

      .filter-chip {
        border: 1px solid #dee2e6;
        background: transparent;
        color: #212529;
      }
      .filter-chip:hover {
        background: #6c757d;
        color: #fff;
      }
      .filter-chip.active {
        background: #0d6efd;
        color: #fff;
        border-color: #0d6efd;
      }

      .order-item-thumb {
        width: 64px;
        height: 64px;
        border-radius: .5rem;
        object-fit: cover;
        border: 1px solid #dee2e6;
      }
      .divider {
        height: 1px;
        background-color: #dee2e6;
        width: 100%;
      }

      /* Address Modal Styles */
      .address-detail {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
      }
      .address-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
      }
      .address-value {
        color: #212529;
        margin-bottom: 0.75rem;
      }
    </style>
  </head>

  <body>
    <!-- Header partial -->
    <%- include('partials/header') %>
    <!-- Account Sidebar partial -->
    <%- include('partials/accountSidebar') %>

    <main class="content-wrapper">
      <header class="page-header d-flex flex-wrap align-items-center justify-content-between gap-3">
        <div>
          <h1 class="h3 mb-1">My Orders</h1>
          <p class="mb-0 text-muted">Track, manage, and view your laptop orders</p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <button class="btn filter-chip active" data-filter="all"><i class="bi bi-card-list me-1"></i> All</button>
          <button class="btn filter-chip" data-filter="processing"><i class="bi bi-hourglass-split me-1"></i> Processing</button>
          <button class="btn filter-chip" data-filter="shipped"><i class="bi bi-truck me-1"></i> Shipped</button>
          <button class="btn filter-chip" data-filter="delivered"><i class="bi bi-check2-circle me-1"></i> Delivered</button>
          <button class="btn filter-chip" data-filter="cancelled"><i class="bi bi-x-circle me-1"></i> Cancelled</button>
        </div>
      </header>

      <!-- Orders List -->
      <section id="ordersList" class="vstack gap-3">
        <% orders.forEach(order => { %>
          <article class="card card-light order-card" data-status="<%= order.status.toLowerCase() %>">
            <div class="card-body">
              <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                <div class="d-flex flex-wrap align-items-center gap-3">
                  <span class="badge badge-status <%= order.status.toLowerCase() %> text-uppercase">
                    <i class="bi me-1
                      <%= order.status === 'processing' ? 'bi-hourglass-split' :
                          order.status === 'shipped' ? 'bi-truck' :
                          order.status === 'delivered' ? 'bi-check2-circle' : 'bi-x-circle' %>"></i>
                    <%= order.status %>
                  </span>
                  <span class="text-muted">Order ID</span>
                  <strong><%= order.orderId %></strong>
                  <span class="vr mx-2"></span>
                  <span class="text-muted"><i class="bi bi-calendar-date me-1"></i> <%= new Date(order.createdAt).toLocaleDateString() %></span>
                </div>

                <div class="order-actions d-flex align-items-center gap-2">
                  <button class="btn btn-outline-secondary" data-order="<%= order.orderId %>"><i class="bi bi-eye me-1"></i> View</button>
                  <% if (['shipped','processing'].includes(order.status.toLowerCase())) { %>
                    <button class="btn btn-outline-secondary" data-track="<%= order.orderId %>"><i class="bi bi-geo-alt me-1"></i> Track</button>
                  <% } %>
                  <% if (order.status.toLowerCase() === 'delivered') { %>
                    <button class="btn btn-outline-secondary" data-invoice="<%= order.orderId %>"><i class="bi bi-receipt me-1"></i> Invoice</button>
                  <% } %>
                  <% if (order.status.toLowerCase() === 'processing') { %>
                    <button class="btn btn-outline-danger" data-cancel="<%= order.orderId %>"><i class="bi bi-x-circle me-1"></i> Cancel</button>
                  <% } %>
                  <button class="btn btn-outline-info view-address-btn" data-bs-toggle="modal" data-bs-target="#addressModal" data-address='<%= JSON.stringify(order.selectedAddress) %>' data-order-id="<%= order.orderId %>">
                    <i class="bi bi-geo-alt me-1"></i> View Address
                  </button>
                </div>
              </div>

              <div class="my-3 divider"></div>

              <!-- Items -->
              <div class="table-responsive">
                <table class="table table-lightish align-middle mb-3">
                  <thead>
                    <tr>
                      <th scope="col">Item</th>
                      <th scope="col" class="text-center">Qty</th>
                      <th scope="col" class="text-end">Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.items.forEach(item => { %>
                      <tr>
                        <td>
                          <div class="d-flex align-items-center gap-3">
                            <img class="order-item-thumb" src="<%= item.product.images[0] %>" alt="Item image" />
                            <div>
                              <div class="fw-semibold"><%= item.product.name %></div>
                              <small class="text-muted">Category: Laptops & Accessories</small>
                            </div>
                          </div>
                        </td>
                        <td class="text-center"><%= item.quantity %></td>
                        <td class="text-end"><%= parseFloat(item.price).toFixed(2) %>/-</td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <div class="row g-3">
                <div class="col-12 col-md-6">
                  <div class="p-3 rounded-3 border bg-light">
                    <div class="text-muted mb-1">Ship to</div>
                    <div class="fw-semibold"><i class="bi bi-geo-alt me-2"></i>
                      <%= order.selectedAddress.line1 %>, <%= order.selectedAddress.city %>, <%= order.selectedAddress.state %>, <%= order.selectedAddress.pincode %>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <div class="p-3 rounded-3 border bg-light d-flex align-items-center justify-content-between">
                    <div>
                      <div class="text-muted mb-1">Order total</div>
                      <div class="fs-5 fw-bold"><%= parseFloat(order.total).toFixed(2) %>/-</div>
                    </div>
                    <a href="/account/orders/invoice/<%= order.orderId %>" class="btn btn-primary">
  <i class="bi bi-box-arrow-in-down me-1"></i> Download Invoice
</a>

                  </div>
                </div>
              </div>
            </div>
          </article>
        <% }) %>
      </section>
    </main>

    <!-- Address Modal -->
    <div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="addressModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addressModalLabel">
              <i class="bi bi-geo-alt me-2"></i>Shipping Address
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <div class="text-muted small mb-2">Order ID: <span id="modalOrderId" class="fw-bold text-dark"></span></div>
            </div>
            
            <div class="address-detail">
              <div class="row g-3">
                <div class="col-12" id="recipientName" style="display: none;">
                  <div class="address-label">
                    <i class="bi bi-person me-1"></i>Recipient Name
                  </div>
                  <div class="address-value" id="modalRecipientName"></div>
                </div>
                
                <div class="col-12">
                  <div class="address-label">
                    <i class="bi bi-house me-1"></i>Address Line 1
                  </div>
                  <div class="address-value" id="modalLine1"></div>
                </div>
                
                <div class="col-12" id="line2Container" style="display: none;">
                  <div class="address-label">
                    <i class="bi bi-house me-1"></i>Address Line 2
                  </div>
                  <div class="address-value" id="modalLine2"></div>
                </div>
                
                <div class="col-sm-6">
                  <div class="address-label">
                    <i class="bi bi-building me-1"></i>City
                  </div>
                  <div class="address-value" id="modalCity"></div>
                </div>
                
                <div class="col-sm-6">
                  <div class="address-label">
                    <i class="bi bi-map me-1"></i>State
                  </div>
                  <div class="address-value" id="modalState"></div>
                </div>
                
                <div class="col-sm-6">
                  <div class="address-label">
                    <i class="bi bi-mailbox me-1"></i>PIN Code
                  </div>
                  <div class="address-value" id="modalPincode"></div>
                </div>
                
                <div class="col-sm-6" id="countryContainer" style="display: none;">
                  <div class="address-label">
                    <i class="bi bi-globe me-1"></i>Country
                  </div>
                  <div class="address-value" id="modalCountry"></div>
                </div>
                
                <div class="col-12" id="phoneContainer" style="display: none;">
                  <div class="address-label">
                    <i class="bi bi-telephone me-1"></i>Phone Number
                  </div>
                  <div class="address-value" id="modalPhone"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-outline-primary">
              <i class="bi bi-map me-1"></i>View on Map
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
      // Handle View Address button clicks
      document.addEventListener('DOMContentLoaded', function() {
        const viewAddressBtns = document.querySelectorAll('.view-address-btn');
        
        viewAddressBtns.forEach(btn => {
          btn.addEventListener('click', function() {
            const addressData = JSON.parse(this.dataset.address);
            const orderId = this.dataset.orderId;
            
            // Set order ID
            document.getElementById('modalOrderId').textContent = orderId;
            
            // Set address fields
            document.getElementById('modalLine1').textContent = addressData.line1 || 'N/A';
            document.getElementById('modalCity').textContent = addressData.city || 'N/A';
            document.getElementById('modalState').textContent = addressData.state || 'N/A';
            document.getElementById('modalPincode').textContent = addressData.pincode || 'N/A';
            
            // Handle optional fields
            const recipientContainer = document.getElementById('recipientName');
            const modalRecipientName = document.getElementById('modalRecipientName');
            if (addressData.name) {
              modalRecipientName.textContent = addressData.name;
              recipientContainer.style.display = 'block';
            } else {
              recipientContainer.style.display = 'none';
            }
            
            const line2Container = document.getElementById('line2Container');
            const modalLine2 = document.getElementById('modalLine2');
            if (addressData.line2) {
              modalLine2.textContent = addressData.line2;
              line2Container.style.display = 'block';
            } else {
              line2Container.style.display = 'none';
            }
            
            const countryContainer = document.getElementById('countryContainer');
            const modalCountry = document.getElementById('modalCountry');
            if (addressData.country) {
              modalCountry.textContent = addressData.country;
              countryContainer.style.display = 'block';
            } else {
              countryContainer.style.display = 'none';
            }
            
            const phoneContainer = document.getElementById('phoneContainer');
            const modalPhone = document.getElementById('modalPhone');
            if (addressData.phone) {
              modalPhone.textContent = addressData.phone;
              phoneContainer.style.display = 'block';
            } else {
              phoneContainer.style.display = 'none';
            }
          });
        });
        
        // Filter functionality
        const filterBtns = document.querySelectorAll('.filter-chip');
        const orderCards = document.querySelectorAll('.order-card');
        
        filterBtns.forEach(btn => {
          btn.addEventListener('click', function() {
            // Remove active class from all buttons
            filterBtns.forEach(b => b.classList.remove('active'));
            // Add active class to clicked button
            this.classList.add('active');
            
            const filter = this.dataset.filter;
            
            orderCards.forEach(card => {
              if (filter === 'all' || card.dataset.status === filter) {
                card.style.display = 'block';
              } else {
                card.style.display = 'none';
              }
            });
          });
        });
      });
    </script>
  </body>
</html>