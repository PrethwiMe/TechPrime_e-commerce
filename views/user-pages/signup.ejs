<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Create Account - TechPrime</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- SweetAlert2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheets/userLogin.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container-fluid py-3 px-5">
    <div class="row d-flex align-items-center">
      <div class="col-lg-6 mb-4">
        <img src="/images/image.png" alt="Rocket" class="img-fluid rounded-4 shadow">
      </div>

      <div class="col-lg-6 px-5">
        <h2 class="fw-bold">Create an account</h2>
        <p class="text-muted mb-4">Enter your details below</p>

        <!-- Signup Form -->
        <form action="/signupData" method="POST" id="signupForm">
          <div class="row">
            <div class="col mb-3">
              <input type="text" name="firstName" class="form-control border-0 border-bottom rounded-0" placeholder="First Name" required>
            </div>
            <div class="col mb-3">
              <input type="text" name="lastName" class="form-control border-0 border-bottom rounded-0" placeholder="Last Name" required>
            </div>
          </div>

          <input type="text" name="phone" class="form-control border-0 border-bottom rounded-0 mb-3" placeholder="Phone" required>
          <input type="email" name="email" class="form-control border-0 border-bottom rounded-0 mb-3" placeholder="Email" required>
          <input type="password" name="password" class="form-control border-0 border-bottom rounded-0 mb-3" placeholder="Password" required>
          <input type="password" name="confirmPassword" class="form-control border-0 border-bottom rounded-0 mb-3" placeholder="Confirm Password" required>
          <input type="text" name="referralCode" class="form-control border-0 border-bottom rounded-0 mb-4" placeholder="Enter referral code (optional)">

          <% if (error && error.length > 0) { %>
            <p style="color: red;"><%= error %></p>
          <% } %>

          <!-- Normal Signup -->
          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-dark py-2">Create Account</button>
          </div>

          <!-- Google Signup -->
          <div class="d-grid mb-3">
            <a href="/auth/google" class="btn btn-outline-dark d-flex align-items-center justify-content-center gap-2 py-2">
              <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" width="20" alt="Google Icon">
              Sign up with Google
            </a>
          </div>

          <div class="text-center">
            Already have an account? <a href="/login" class="text-decoration-none fw-semibold">Log in</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
  <script>
    // Intercept form submission to show loading popup
    document.getElementById('signupForm').addEventListener('submit', function(e) {
      // Show loading popup
      Swal.fire({
        title: 'Creating Account...',
        text: 'Please wait while we process your request.',
        allowOutsideClick: false,
        allowEscapeKey: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });
      // Allow form submission to proceed naturally
    });
  </script>
</body>
</html>
