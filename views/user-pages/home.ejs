<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TechCart - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    img {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    img:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .category-btn {
      padding: 12px 24px;
      font-weight: 600;
      background-color: #000;
      color: white;
      border: none;
      border-radius: 10px;
      margin: 8px;
      transition: background-color 0.3s ease, transform 0.2s ease;
      cursor: pointer;
    }

    .category-btn:hover {
      background-color: #333;
      transform: translateY(-2px);
    }

    .product-card img {
      height: 220px;
      object-fit: contain;
      border-bottom: 1px solid #eee;
      padding: 15px;
    }

    .product-card .card {
      margin: 0 15px 30px;
      transition: all 0.3s ease;
      border: none;
      border-radius: 12px;
      background-color: #fff;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
    }

    .product-card .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .product-card .card-body {
      padding: 1rem;
    }

    .section-title {
      font-size: 1.7rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      border-left: 5px solid #000;
      padding-left: 12px;
    }

    .price {
      font-weight: 700;
      font-size: 1.15rem;
      color: #000000;
      display: inline-block;
    }

    .old-price {
      text-decoration: line-through;
      color: #888;
      margin-left: 8px;
    }

    .out-of-stock {
      color: #dc3545;
      font-weight: 700;
      font-size: 1.15rem;
    }

    .card-title {
      font-size: 1rem;
      font-weight: 600;
      color: #222;
      line-height: 1.3;
      min-height: 38px;
    }

    .btn-dark-custom {
      background-color: #1a1a1a;
      color: #fff;
      border: 1px solid #000;
      font-weight: 500;
      padding: 6px 14px;
      border-radius: 8px;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .btn-dark-custom:hover:not(:disabled) {
      background-color: #333;
      border-color: #111;
      transform: translateY(-2px);
      color: #fff;
    }

    .btn-dark-custom:disabled {
      background-color: #6c757d;
      border-color: #6c757d;
      cursor: not-allowed;
      opacity: 0.65;
    }

    .scroll-container {
      display: flex;
      gap: 25px;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding-bottom: 15px;
      padding-top: 10px;
    }

    .scroll-container::-webkit-scrollbar {
      display: none;
    }

    .scroll-container {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .scroll-container .product-card {
      min-width: 25%;
      flex: 0 0 auto;
    }

    .banner-img {
      border-radius: 14px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      margin-bottom: 40px;
    }

    .section-container {
      margin-bottom: 60px;
    }

    @media (max-width: 992px) {
      .scroll-container .product-card {
        min-width: 48%;
      }
    }

    @media (max-width: 576px) {
      .scroll-container .product-card {
        min-width: 85%;
      }

      .product-card img {
        height: 180px;
      }
    }

    .flying-img {
      position: absolute;
      z-index: 9999;
      transition: all 0.6s cubic-bezier(0.65, -0.1, 0.25, 1);
      pointer-events: none;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .swal2-popup .animate__animated {
      animation-duration: 0.2s !important;
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <!-- Banner -->
    <div class="section-container">
      <img src="https://img.pikbest.com/origin/10/01/82/867pIkbEsTAIq.png!sw800" class="w-100 banner-img" alt="Banner" loading="lazy" />
    </div>

    <!-- Flash Sales -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="section-title">Flash Sales</div>
        <a href="/search" class="btn btn-dark btn-sm">View All Products</a>
      </div>
      <div class="scroll-container">
        <% 
          const flashProducts = products.slice(0, 8);
          flashProducts.forEach(product => { 
            const inStockVariants = product.fullProduct?.filter(v => v.stock > 0) || [];
            const hasStock = inStockVariants.length > 0;
            let displayVariant = null;
            if (hasStock) {
              displayVariant = inStockVariants.reduce((prev, curr) => 
                (prev.price < curr.price) ? prev : curr
              );
            }
        %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-100" loading="lazy" />
            </a>
            <div class="card-body">
              <h6 class="card-title"><%= product.name %></h6>
              <p class="mb-1"><%= product.OS %></p>
              <p class="mb-1"><%= product.companyDetails %></p>

              <% if (hasStock) { %>
                <div class="price mb-3">
                  <span>₹<%= displayVariant.price.toLocaleString('en-IN') %></span>
                  <% if (displayVariant.price < product.originalPrice) { %>
                    <span class="old-price">₹<%= product.originalPrice.toLocaleString('en-IN') %></span>
                  <% } %>
                </div>
              <% } else { %>
                <div class="out-of-stock mb-3">Out of Stock</div>
              <% } %>

              <div class="d-flex justify-content-between gap-2">
                <% if (hasStock) { %>
                  <button class="btn-dark-custom add-to-cart flex-fill"
                    data-id="<%= product._id %>"
                    data-variant="<%= displayVariant._id %>"
                    data-name="<%= product.name %>"
                    data-img="<%= product.images[0] %>">
                    Add to Cart
                  </button>
                <% } else { %>
                  <button class="btn-dark-custom flex-fill" disabled>Out of Stock</button>
                <% } %>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">♡</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Categories -->
    <div class="section-container">
      <div class="section-title mb-3">Categories</div>
      <div class="d-flex flex-wrap justify-content-center">
        <% if(categories && categories.length){ %>
          <% categories.forEach(cat => { %>
            <button class="category-btn text-capitalize" 
                    onclick="window.location.href='/search?categories=<%= cat._id %>'">
              <%= cat.name %>
            </button>
          <% }); %>
        <% } else { %>
          <p>No categories found</p>
        <% } %>
      </div>
    </div>

    <!-- New Arrivals -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <div class="section-title">New Arrival</div>
          <small class="text-muted">Featured</small>
        </div>
        <a href="/search" class="btn btn-dark btn-sm">View All</a>
      </div>
      <div class="scroll-container">
        <% 
          const newProducts = products.slice(-5).reverse();
          newProducts.forEach(product => { 
            const inStockVariants = product.fullProduct?.filter(v => v.stock > 0) || [];
            const hasStock = inStockVariants.length > 0;
            let displayVariant = null;
            if (hasStock) {
              displayVariant = inStockVariants.reduce((prev, curr) => 
                (prev.price < curr.price) ? prev : curr
              );
            }
        %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-100" loading="lazy" />
            </a>
            <div class="card-body">
              <h6 class="card-title"><%= product.name %></h6>
              <p class="mb-1"><%= product.OS %></p>
              <p class="mb-1"><%= product.companyDetails %></p>

              <% if (hasStock) { %>
                <div class="price mb-3">
                  <span>₹<%= displayVariant.price.toLocaleString('en-IN') %></span>
                  <% if (displayVariant.price < product.originalPrice) { %>
                    <span class="old-price">₹<%= product.originalPrice.toLocaleString('en-IN') %></span>
                  <% } %>
                </div>
              <% } else { %>
                <div class="out-of-stock mb-3">Out of Stock</div>
              <% } %>

              <div class="d-flex justify-content-between gap-2">
                <% if (hasStock) { %>
                  <button class="btn-dark-custom add-to-cart flex-fill"
                    data-id="<%= product._id %>"
                    data-variant="<%= displayVariant._id %>"
                    data-name="<%= product.name %>"
                    data-img="<%= product.images[0] %>">
                    Add to Cart
                  </button>
                <% } else { %>
                  <button class="btn-dark-custom flex-fill" disabled>Out of Stock</button>
                <% } %>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">♡</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Best Selling -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <div class="section-title">Best Selling Products</div>
          <small class="text-muted">This Month</small>
        </div>
        <a href="/search" class="btn btn-dark btn-sm">View All</a>
      </div>
      <div class="scroll-container">
        <% 
          const bestProducts = products.slice(0, 8);
          bestProducts.forEach(product => { 
            const inStockVariants = product.fullProduct?.filter(v => v.stock > 0) || [];
            const hasStock = inStockVariants.length > 0;
            let displayVariant = null;
            if (hasStock) {
              displayVariant = inStockVariants.reduce((prev, curr) => 
                (prev.price < curr.price) ? prev : curr
              );
            }
        %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-100" loading="lazy" />
            </a>
            <div class="card-body">
              <h6 class="card-title"><%= product.name %></h6>
              <p class="mb-1"><%= product.OS %></p>
              <p class="mb-1"><%= product.companyDetails %></p>

              <% if (hasStock) { %>
                <div class="price mb-3">
                  <span>₹<%= displayVariant.price.toLocaleString('en-IN') %></span>
                  <% if (displayVariant.price < product.originalPrice) { %>
                    <span class="old-price">₹<%= product.originalPrice.toLocaleString('en-IN') %></span>
                  <% } %>
                </div>
              <% } else { %>
                <div class="out-of-stock mb-3">Out of Stock</div>
              <% } %>

              <div class="d-flex justify-content-between gap-2">
                <% if (hasStock) { %>
                  <button class="btn-dark-custom add-to-cart flex-fill"
                    data-id="<%= product._id %>"
                    data-variant="<%= displayVariant._id %>"
                    data-name="<%= product.name %>"
                    data-img="<%= product.images[0] %>">
                    Add to Cart
                  </button>
                <% } else { %>
                  <button class="btn-dark-custom flex-fill" disabled>Out of Stock</button>
                <% } %>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">♡</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    async function postData(url = "", data = {}) {
      const response = await fetch(url, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });
      return response.json();
    }

    function flyToCart(imgSrc, btn) {
      const cartIcon = document.querySelector("#cart-icon") || document.querySelector(".cart-icon");
      if (!cartIcon) return;

      const img = document.createElement("img");
      img.src = imgSrc;
      img.className = "flying-img";
      document.body.appendChild(img);

      const btnRect = btn.getBoundingClientRect();
      img.style.left = btnRect.left + btnRect.width / 2 - 30 + "px";
      img.style.top = btnRect.top + btnRect.height / 2 - 30 + "px";
      img.style.width = "60px";

      const cartRect = cartIcon.getBoundingClientRect();
      setTimeout(() => {
        img.style.left = cartRect.left + cartRect.width / 2 - 15 + "px";
        img.style.top = cartRect.top + cartRect.height / 2 - 15 + "px";
        img.style.width = "30px";
        img.style.opacity = "0.5";
      }, 50);

      setTimeout(() => img.remove(), 600);
    }

    document.addEventListener("DOMContentLoaded", () => {
      // Add to Cart (unchanged)
      document.querySelectorAll(".add-to-cart").forEach(btn => {
        btn.addEventListener("click", async () => {
          const originalText = btn.innerText;
          btn.innerText = 'Adding...';
          btn.disabled = true;

          const productId = btn.dataset.id;
          const variantId = btn.dataset.variant;
          const productName = btn.dataset.name;
          const imgSrc = btn.dataset.img;

          flyToCart(imgSrc, btn);

          try {
            const res = await postData("/cart/add", { productId, variantId, productName });

            if (res.success) {
              Swal.fire({
                icon: "success",
                title: "Added to Cart!",
                text: res.message || "Product added successfully!",
                confirmButtonText: "Go to Cart",
                showCancelButton: true,
                cancelButtonText: "Continue Shopping",
                showClass: { popup: "animate__animated animate__fadeInUp" },
                hideClass: { popup: "animate__animated animate__fadeOutDown" }
              }).then((result) => {
                if (result.isConfirmed) window.location.href = "/cart";
              });
            } else if (res.loginRequired) {
              Swal.fire({
                icon: "warning",
                title: "Login Required",
                text: "Please login to add items to cart.",
                confirmButtonText: "Login",
              }).then((r) => r.isConfirmed && (window.location.href = "/login"));
            } else {
              Swal.fire({ icon: "error", title: "Failed", text: res.message || "Something went wrong." });
            }
          } catch (err) {
            Swal.fire({
              icon: "warning",
              title: "Login Required",
              text: "Please login to continue",
              confirmButtonText: "Login"
            }).then((r) => r.isConfirmed && (window.location.href = "/login"));
          } finally {
            btn.innerText = originalText;
            btn.disabled = false;
          }
        });
      });

      // === WISHLIST HANDLER - FULLY UPDATED ===
      document.querySelectorAll(".add-to-wishlist").forEach(btn => {
        btn.addEventListener("click", async () => {
          const originalIcon = btn.innerHTML.trim(); // Save original (♡)
          btn.innerHTML = "⭕";
          btn.disabled = true;

          const productId = btn.dataset.id;
          const productName = btn.dataset.name;

          try {
            const res = await postData("/wishlist", { productId, productName });

            if (res.success) {
              // Only change to heart if successfully added
              btn.innerHTML = "♡";
              Swal.fire({
                icon: "success",
                title: "Added to Wishlist!",
                text: `${productName} has been added to your wishlist.`,
                showCancelButton: true,
                confirmButtonText: "View Wishlist",
                cancelButtonText: "Continue Shopping"
              }).then((result) => {
                if (result.isConfirmed) {
                  window.location.href = "/viewWishList";
                }
              });
            } 
            else if (res.message === "Already in Wishlist") {
              // Keep heart if already present, or show warning
              btn.innerHTML = "♡";
              Swal.fire({
                icon: "info",
                title: "Already in Wishlist",
                text: `${productName} is already in your wishlist.`,
              });
            }
            else if (res.loginRequired) {
              btn.innerHTML = originalIcon;
              Swal.fire({
                icon: "warning",
                title: "Login Required",
                text: "Please login to add items to your wishlist.",
                confirmButtonText: "Login Now"
              }).then((r) => {
                if (r.isConfirmed) window.location.href = "/login";
              });
            }
            else {
              btn.innerHTML = originalIcon;
              Swal.fire({
                icon: "error",
                title: "Oops!",
                text: res.message || "Failed to add to wishlist. Please try again."
              });
            }
          } catch (err) {
            btn.innerHTML = originalIcon;
            Swal.fire({
              icon: "warning",
              title: "Login Required",
              text: "You need to be logged in to use wishlist.",
              confirmButtonText: "Login"
            }).then((r) => r.isConfirmed && (window.location.href = "/login"));
          } finally {
            // Only disable temporarily — re-enable after response
            setTimeout(() => { btn.disabled = false; }, 500);
          }
        });
      });
    });
  </script>
</body>
</html>

<%- include('partials/footer') %>