<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TechCart - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- âœ… Animate.css for swirl effects -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    img {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    img:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .category-btn {
      padding: 12px 24px;
      font-weight: 600;
      background-color: #000;
      color: white;
      border: none;
      border-radius: 10px;
      margin: 8px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .category-btn:hover {
      background-color: #333;
      transform: translateY(-2px);
    }

    .product-card img {
      height: 220px;
      object-fit: contain;
      border-bottom: 1px solid #eee;
      padding: 15px;
    }

    .product-card .card {
      margin: 0 15px 30px;
      transition: all 0.3s ease;
      border: none;
      border-radius: 12px;
      background-color: #fff;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
    }

    .product-card .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .product-card .card-body {
      padding: 1rem;
    }

    .section-title {
      font-size: 1.7rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      border-left: 5px solid #000;
      padding-left: 12px;
    }

    .price {
      font-weight: 700;
      font-size: 1.15rem;
      color: #000000;
      display: inline-block;
    }

    .old-price {
      text-decoration: line-through;
      color: #888;
      margin-left: 8px;
    }

    .card-title {
      font-size: 1rem;
      font-weight: 600;
      color: #222;
      line-height: 1.3;
      min-height: 38px;
    }

    .btn-dark-custom {
      background-color: #1a1a1a;
      color: #fff;
      border: 1px solid #000;
      font-weight: 500;
      padding: 6px 14px;
      border-radius: 8px;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .btn-dark-custom:hover {
      background-color: #333;
      border-color: #111;
      transform: translateY(-2px);
      color: #fff;
    }

    .scroll-container {
      display: flex;
      gap: 25px;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding-bottom: 15px;
      padding-top: 10px;
    }

    .scroll-container::-webkit-scrollbar {
      display: none;
    }

    .scroll-container {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .scroll-container .product-card {
      min-width: 25%;
      flex: 0 0 auto;
    }

    .banner-img {
      border-radius: 14px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      margin-bottom: 40px;
    }

    .section-container {
      margin-bottom: 60px;
    }

    @media (max-width: 992px) {
      .scroll-container .product-card {
        min-width: 48%;
      }
    }

    @media (max-width: 576px) {
      .scroll-container .product-card {
        min-width: 85%;
      }

      .product-card img {
        height: 180px;
      }
    }

    /* âœ… Fly to cart effect */
    .flying-img {
      position: absolute;
      z-index: 9999;
      transition: all 1s cubic-bezier(0.65, -0.1, 0.25, 1);
      pointer-events: none;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <!-- Banner -->
    <div class="section-container">
      <img src="https://img.pikbest.com/origin/10/01/82/867pIkbEsTAIq.png!sw800" class="w-100 banner-img" alt="Banner" />
    </div>

    <!-- Flash Sales -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="section-title">Flash Sales</div>
        <a href="/search" class="btn btn-dark btn-sm">View All Products</a>
      </div>
      <div class="scroll-container">
        <% products.forEach(product => { %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" />
            </a>
            <div class="card-body">
              <h6 class="card-title "><%= product.name %></h6>
              <p class="mb-1"><%= product.OS%></p>
              <p class="mb-1"><%= product.companyDetails%></p>
              <div class="price mb-3">
                <span>â‚¹<%= product.originalPrice %></span>
              </div>
              <div class="d-flex justify-content-between">
                <button class="btn-dark-custom add-to-cart"
                  data-id="<%= product._id %>"
                  data-variant="<%= product.fullProduct[0]?._id %>"
                  data-name="<%= product.name %>"
                  data-img="<%= product.images[0] %>">Add to Cart</button>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">&#9829;</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Categories -->
    <div class="section-container">
      <div class="section-title mb-3">Categories</div>
      <div class="d-flex flex-wrap">
        <% if(categories && categories.length){ %>
        <% categories.forEach(cat => { %>
        <button class="category-btn text-capitalize"><%= cat.name %></button>
        <% }); %>
        <% } else { %>
        <p>No categories found</p>
        <% } %>
      </div>
    </div>

    <!-- New Arrivals -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <div class="section-title">New Arrival</div>
          <small class="text-muted">Featured</small>
        </div>
        <a href="/search" class="btn btn-dark btn-sm">View All</a>
      </div>
      <div class="scroll-container">
        <% products.slice().reverse().forEach(product => { %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" />
            </a>
            <div class="card-body">
              <h6 class="card-title "><%= product.name %></h6>
              <p class="mb-1"><%= product.OS%></p>
              <p class=""><%= product.companyDetails%></p>
              <div class="price mb-3">
                <span>â‚¹<%= product.originalPrice %></span>
              </div>
              <div class="d-flex justify-content-between">
                <button class="btn-dark-custom add-to-cart"
                  data-id="<%= product._id %>"
                  data-variant="<%= product.fullProduct[0]?._id %>"
                  data-name="<%= product.name %>"
                  data-img="<%= product.images[0] %>">Add to Cart</button>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">&#9829;</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Best Selling -->
    <div class="section-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <div class="section-title">Best Selling Products</div>
          <small class="text-muted">This Month</small>
        </div>
        <a href="/search" class="btn btn-dark btn-sm">View All</a>
      </div>
      <div class="scroll-container">
        <% products.forEach(product => { %>
        <div class="product-card">
          <div class="card h-100 text-center">
            <a href="/all-product/product-details/<%= product._id %>" class="text-decoration-none text-dark">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" />
            </a>
            <div class="card-body">
              <h6 class="card-title "><%= product.name %></h6>
              <p class="mb-1"><%= product.OS%></p>
              <p class="mb-1"><%= product.companyDetails%></p>
              <div class="price mb-3">
                <span>â‚¹<%= product.originalPrice %></span>
              </div>
              <div class="d-flex justify-content-between">
                <button class="btn-dark-custom add-to-cart"
                  data-id="<%= product._id %>"
                  data-variant="<%= product.fullProduct[0]?._id %>"
                  data-name="<%= product.name %>"
                  data-img="<%= product.images[0] %>">Add to Cart</button>
                <button class="btn-dark-custom add-to-wishlist"
                  data-id="<%= product._id %>"
                  data-name="<%= product.name %>">&#9829;</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    async function postData(url = "", data = {}) {
      const response = await fetch(url, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });
      return response.json();
    }

    // âœ… Fly-to-cart animation
    function flyToCart(imgSrc, btn) {
      const cartIcon = document.querySelector("#cart-icon") || document.querySelector(".cart-icon");
      if (!cartIcon) return;

      const img = document.createElement("img");
      img.src = imgSrc;
      img.className = "flying-img";
      document.body.appendChild(img);

      const btnRect = btn.getBoundingClientRect();
      img.style.left = btnRect.left + "px";
      img.style.top = btnRect.top + "px";
      img.style.width = "60px";

      const cartRect = cartIcon.getBoundingClientRect();
      setTimeout(() => {
        img.style.left = cartRect.left + "px";
        img.style.top = cartRect.top + "px";
        img.style.width = "30px";
        img.style.opacity = "0.5";
      }, 100);

      setTimeout(() => img.remove(), 1000);
    }

    document.addEventListener("DOMContentLoaded", () => {
      // Add to Cart
      document.querySelectorAll(".add-to-cart").forEach(btn => {
        btn.addEventListener("click", async () => {
          const productId = btn.dataset.id;
          const variantId = btn.dataset.variant;
          const productName = btn.dataset.name;
          const imgSrc = btn.dataset.img;

          // ðŸš€ Animate
          flyToCart(imgSrc, btn);

          try {
            const res = await postData("/cart/add", { productId, variantId, productName });

            if (res.success) {
              Swal.fire({
                icon: "success",
                title: "Added to Cart",
                text: res.message || "Product added successfully!",
                confirmButtonText: "Go to Cart",
                showCancelButton: true,
                cancelButtonText: "Continue Shopping",
                showClass: { popup: "animate__animated animate__rotateIn" },
                hideClass: { popup: "animate__animated animate__fadeOutUp" }
              }).then((result) => {
                if (result.isConfirmed) window.location.href = "/cart";
              });

            } else if (res.loginRequired) {
              Swal.fire({
                icon: "warning",
                title: "Login Required",
                text: res.message || "Please login to continue.",
                confirmButtonText: "Login",
                showClass: { popup: "animate__animated animate__zoomInDown" },
                hideClass: { popup: "animate__animated animate__zoomOutUp" }
              }).then((result) => {
                if (result.isConfirmed) window.location.href = "/login";
              });

            } else {
              Swal.fire({
                icon: "error",
                title: "Failed",
                text: res.message || "Could not add product to cart.",
                showClass: { popup: "animate__animated animate__shakeX" },
                hideClass: { popup: "animate__animated animate__fadeOut" }
              });
            }
          } catch (err) {
            Swal.fire({
              icon: "warning",
              title: "Login Required",
              text: "Please login to continue",
              confirmButtonText: "Login",
              showClass: { popup: "animate__animated animate__zoomIn" },
              hideClass: { popup: "animate__animated animate__zoomOut" }
            }).then((result) => {
              if (result.isConfirmed) window.location.href = "/login";
            });
          }
        });
      });

      // Add to Wishlist
      document.querySelectorAll(".add-to-wishlist").forEach(btn => {
        btn.addEventListener("click", async () => {
          const productId = btn.dataset.id;
          const productName = btn.dataset.name;

          try {
            const res = await postData("/wishlist", { productId, productName });

            if (res.success) {
              Swal.fire({
                icon: "success",
                title: "Added to Wishlist",
                text: res.message || "Product added successfully!",
                confirmButtonText: "Go to Wishlist",
                showCancelButton: true,
                cancelButtonText: "Continue Shopping",
                showClass: { popup: "animate__animated animate__rotateIn" },
                hideClass: { popup: "animate__animated animate__fadeOutUp" }
              }).then((result) => {
                if (result.isConfirmed) window.location.href = "/viewWishList";
              });

            } else if (res.loginRequired) {
              Swal.fire({
                icon: "warning",
                title: "Login Required",
                text: res.message || "Please login to continue.",
                confirmButtonText: "Login",
                showClass: { popup: "animate__animated animate__zoomInDown" },
                hideClass: { popup: "animate__animated animate__zoomOutUp" }
              }).then((result) => {
                if (result.isConfirmed) window.location.href = "/login";
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Failed",
                text: res.message || "Could not add to wishlist.",
                showClass: { popup: "animate__animated animate__shakeX" },
                hideClass: { popup: "animate__animated animate__fadeOut" }
              });
            }
          } catch (err) {
            Swal.fire({
              icon: "warning",
              title: "Login Required",
              text: "Please login to continue",
              confirmButtonText: "Login",
              showClass: { popup: "animate__animated animate__zoomIn" },
              hideClass: { popup: "animate__animated animate__zoomOut" }
            }).then((result) => {
              if (result.isConfirmed) window.location.href = "/login";
            });
          }
        });
      });
    });
  </script>
</body>
</html>
<%- include('partials/footer') %>


