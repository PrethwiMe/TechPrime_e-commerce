<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Checkout | TechCart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    .address-card {
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 15px;
      transition: background-color 0.3s;
    }

    .address-card:hover {
      background-color: #e9f5ff;
    }

    .coupon-button {
      background-color: #007bff;
      color: #fff;
      border: none;
      transition: background-color 0.3s;
    }

    .coupon-button:hover {
      background-color: #0056b3;
    }

    .place-order-btn {
      background-color: #28a745;
      color: #fff;
      border: none;
      transition: background-color 0.3s;
    }

    .place-order-btn:hover {
      background-color: #218838;
    }

    .available-coupons {
      background-color: #17a2b8;
      color: #fff;
      border-radius: 25px;
      padding: 10px 20px;
      display: inline-block;
    }

    @media (max-width: 767px) {
      .order-summary {
        margin-top: 30px;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/account">Account</a></li>
        <li class="breadcrumb-item"><a href="/cart">Product</a></li>
        <li class="breadcrumb-item active" aria-current="page">Checkout</li>
      </ol>
    </nav>

    <h2 class="mb-4">Billing Details</h2>

    <div class="row">
      <div class="col-lg-6">
        <h5>Delivery Address</h5>

        <form method="POST" action="/checkout/placeOrder">
          <% if (addresses.length === 0) { %>
            <p>No addresses found. Please add an address in your profile.</p>
          <% } %>

          <% addresses.forEach(function(address, index) { %>
            <div class="address-card">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="selectedAddress" id="address<%= index %>" value="<%= address.id %>" <%= index === 0 ? 'checked' : '' %> required>
                <label class="form-check-label" for="address<%= index %>">
                  <%= address.fullName %>, <%= address.line1 %><br />
                  <%= address.city %>, <%= address.state %><br />
                  Pincode: <%= address.pincode %><br />
                  Contact: <%= address.phone %>
                </label>
              </div>
            </div>
          <% }); %>

<button type="button" class="btn btn-secondary mb-4" onclick="window.location.href='/account/address'">Add New Address</button>

          <h5>Payment Methods</h5>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="debitCard" value="debitCard" checked required>
            <label class="form-check-label" for="debitCard">
              Debit/Credit Card
            </label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="bank" value="bank">
            <label class="form-check-label" for="bank">Bank</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="upi" value="upi">
            <label class="form-check-label" for="upi">UPI Method</label>
          </div>

          <div class="form-check mb-4">
            <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod">
            <label class="form-check-label" for="cod">Cash on Delivery</label>
          </div>
      </div>

      <div class="col-lg-6 order-summary">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <span class="available-coupons">AVAILABLE COUPONS</span>
        </div>

        <% let subtotal = 0; %>
        <% cartItems.forEach(item => { %>
          <% let itemTotal = item.variant.price * item.quantity; %>
          <% subtotal += itemTotal; %>
          <div class="d-flex mb-3">
            <img src="<%= (item.product.images && item.product.images.length > 0) ? item.product.images[0] : '/images/default-product.png' %>" alt="Product Image" class="img-fluid me-3" style="max-width: 100px;">
            <div>
              <p><strong><%= item.product.name %></strong></p>
              <p>₹<%= item.variant.price.toLocaleString() %> (Incl. all Taxes)</p>
              <p>Quantity: <%= item.quantity %></p>
            </div>
          </div>
        <% }); %>

        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between">
            <span>Subtotal:</span>
            <strong>₹<%= subtotal.toLocaleString() %></strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Shipping:</span>
            <strong>Free</strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total:</span>
            <strong>₹<%= subtotal.toLocaleString() %></strong>
          </li>
        </ul>

        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Coupon Code" name="couponCode">
          <button class="btn coupon-button btn-primary" type="submit" >Apply Coupon</button>
        </div>

        <button type="submit" class="btn place-order-btn w-100 btn-success">Place Order</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
