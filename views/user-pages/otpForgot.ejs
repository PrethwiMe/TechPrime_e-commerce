<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Verify OTP - TechPrime</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }
    .otp-container {
      max-width: 420px;
      margin: 80px auto;
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    .otp-title {
      text-align: center;
      font-weight: 600;
      margin-bottom: 10px;
      color: #1a73e8;
    }
    .otp-subtitle {
      text-align: center;
      font-size: 14px;
      color: #555;
      margin-bottom: 10px;
    }
    .timer-text {
      text-align: center;
      font-size: 14px;
      color: #d9534f;
      margin-bottom: 25px;
    }
    .otp-input {
      text-align: center;
      letter-spacing: 8px;
      font-size: 24px;
      font-weight: bold;
    }
    .btn-techprime {
      background-color: #1a73e8;
      border: none;
      color: white;
      font-weight: 500;
      padding: 10px;
      width: 100%;
    }
    .btn-techprime:hover {
      background-color: #155fc0;
    }
    .resend-link {
      display: block;
      text-align: center;
      margin-top: 15px;
      font-size: 14px;
      pointer-events: none;
      opacity: 0.5;
      user-select: none;
      text-decoration: none;
      color: #1a73e8;
      cursor: default;
    }
    .resend-link.active {
      pointer-events: auto;
      opacity: 1;
      user-select: auto;
      cursor: pointer;
    }
    /* Visually hidden for accessibility */
    .visually-hidden { 
      position: absolute !important; 
      width: 1px; 
      height: 1px; 
      padding: 0; 
      margin: -1px; 
      overflow: hidden; 
      clip: rect(0, 0, 0, 0); 
      border: 0; 
    }
  </style>
</head>
<body>

  <div class="otp-container" role="main" aria-label="OTP Verification Form">
    <h2 class="otp-title">Enter OTP</h2>
    <p class="otp-subtitle">
      We have sent a verification code to <strong><%= email %></strong>.
    </p>
    <p class="timer-text" aria-live="polite">OTP expires in <span id="countdown">03:00</span></p>

    <form action="/verify-otp" method="POST" novalidate>
      <input type="hidden" name="email" value="<%= email %>" />
      <label for="otpInput" class="visually-hidden">Enter 6-digit OTP</label>
      <input
        id="otpInput"
        type="text"
        name="otp"
        maxlength="6"
        class="form-control otp-input"
        placeholder="••••••"
        inputmode="numeric"
        pattern="[0-9]{6}"
        autocomplete="one-time-code"
        
        aria-describedby="otpHelp"
      />
      <div id="otpHelp" class="form-text text-center mb-3">
        Please enter the 6-digit code
      </div>
      <button type="submit" class="btn btn-techprime">Verify OTP</button>
    </form>

    <% if (err) { %>
      <p class="text-danger mt-3 text-center"><%= err %></p>
    <% } %>

    <a href="#" id="resendLink" class="resend-link" aria-disabled="true" data-email="<%= email %>">Resend OTP</a>
  </div>

  <script>
    const countdownElement = document.getElementById("countdown");
    const resendLink = document.getElementById("resendLink");

    let timeLeft = 3* 60; // 3 minutes timer

    function startTimer(duration) {
      timeLeft = duration;
      resendLink.classList.remove('active');
      resendLink.setAttribute('aria-disabled', 'true');
      resendLink.style.cursor = 'default';

      const timer = setInterval(() => {
        let minutes = Math.floor(timeLeft / 60);
        let seconds = timeLeft % 60;
        seconds = seconds < 10 ? "0" + seconds : seconds;
        countdownElement.textContent = `${minutes}:${seconds}`;

        if (timeLeft <= 0) {
          clearInterval(timer);
          countdownElement.textContent = "00:00";
          resendLink.classList.add('active');
          resendLink.setAttribute('aria-disabled', 'false');
          resendLink.style.cursor = 'pointer';
        }
        timeLeft--;
      }, 1000);
    }

    startTimer(timeLeft);

    resendLink.addEventListener('click', async (e) => {
      e.preventDefault();

      if (!resendLink.classList.contains('active')) return;

      const email = resendLink.dataset.email;
      try {
        const res = await fetch(`/resendForgetOtp?email=${encodeURIComponent(email)}`);
        const data = await res.json();

        if (data.success) {
          alert('OTP resent! Please check your email.');
          startTimer(3 * 60); // restart timer
        } else {
          alert('Failed to resend OTP, please try again.');
        }
      } catch (error) {
        alert('Server error, please try again later.');
      }
    });
  </script>

</body>
</html>
