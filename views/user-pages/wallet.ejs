<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Wallet | TechCart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #020202 0%, #cab3b3 100%);
      --success-gradient: linear-gradient(135deg, #070707 0%, #100e0e 100%);
      --dark-bg: #1a1a1a;
      --white-text: #ffffff;
      --light-bg: #f8f9fa;
    }
    body {
      background-color: var(--light-bg);
    }
    .balance-card {
      background: var(--primary-gradient);
      color: var(--white-text);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s ease;
    }
    .balance-card:hover {
      transform: translateY(-5px);
    }
    .balance-amount {
      font-size: 3rem;
      font-weight: 700;
      color: var(--white-text);
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
    .transaction-item {
      background: var(--white-text);
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      margin-bottom: 15px;
    }
    .transaction-item:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    }
    .credit-badge {
      background: var(--success-gradient);
      color: var(--white-text);
      border-radius: 20px;
      padding: 0.5rem 1rem;
      font-weight: 600;
    }
    .header-section {
      background: var(--primary-gradient);
      color: var(--white-text);
      border-radius: 15px 15px 0 0;
      padding: 1.5rem;
    }
    .no-transactions {
      color: #6c757d;
      text-align: center;
      padding: 3rem;
    }
    @media (max-width: 768px) {
      .balance-amount {
        font-size: 2.5rem;
      }
      .content-wrapper {
        margin-left: 0 !important;
        padding: 10px;
      }
    }
  </style>
</head>

<body>
  <!-- Header and Sidebar -->
  <%- include('partials/header') %>
  <%- include('partials/accountSidebar') %>

  <!-- Wallet Content Wrapper -->
  <div class="content-wrapper" style="margin-left: 250px; padding: 20px;">
    <div class="container-fluid">
      <!-- Welcome Section -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="d-flex align-items-center">
            <i class="fas fa-wallet fa-2x text-primary me-3"></i>
            <div>
              <h2 class="mb-0 fw-bold text-dark">Welcome, <%= user?.firstName || "Customer" %>!</h2>
              <p class="text-muted mb-0">Manage your wallet balance and view your transaction history.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Wallet Balance Card -->
      <div class="row mb-5 justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card balance-card p-4 text-center">
            <i class="fas fa-coins fa-3x mb-3 opacity-90 text-warning"></i>
            <h1 class="balance-amount mb-2 ">
              ₹<%= (wallet && wallet.length > 0 && wallet[0]?.walletAmount ? wallet[0].walletAmount.toLocaleString('en-IN') : '0') %>
            </h1>
            <p class="lead mb-2">Available Wallet Balance</p>
            <small class="opacity-90">
              <i class="fas fa-clock me-1"></i>
              Last updated: <%= wallet && wallet.length > 0 && wallet[0]?.updatedDate ? new Date(wallet[0].updatedDate).toLocaleString('en-IN') : 'N/A' %>
            </small>
          </div>
        </div>
      </div>

      <!-- Wallet Transaction History -->
      <div class="row">
        <div class="col-12">
          <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="header-section">
              <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0 fw-bold">
                  <i class="fas fa-history me-2"></i>Transaction History
                </h3>
                <% if (wallet && wallet.length > 0 && wallet[0]?.refundHistory && wallet[0].refundHistory.length > 0) { %>
                  <span class="badge bg-light text-dark fs-6 px-3 py-2 rounded-pill">
                    <%= wallet[0].refundHistory.length %> Transactions
                  </span>
                <% } %>
              </div>
            </div>
            <div class="card-body p-0">
              <% if (wallet && wallet.length > 0 && wallet[0]?.refundHistory && wallet[0].refundHistory.length > 0) { %>
                <div class="p-4">
                  <div class="row g-3">
                    <% wallet[0].refundHistory.forEach((txn) => { %>
                      <div class="col-12">
                        <div class="transaction-item p-4 d-flex align-items-center justify-content-between">
                          <div class="d-flex align-items-center flex-grow-1">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3 me-4">
                              <i class="fas fa-arrow-up text-success fa-lg"></i>
                            </div>
                            <div class="flex-grow-1">
                              <h6 class="mb-1 fw-semibold text-dark"><%= txn.orderId %></h6>
                              <small class="text-muted d-block">
                                <i class="fas fa-calendar-day me-1"></i>
                                <%= new Date(txn.date).toLocaleDateString('en-IN') %> • <%= new Date(txn.date).toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' }) %>
                              </small>
                              <% if (txn.status) { %>
                                <small class="badge bg-success bg-opacity-25 text-success mt-1">
                                  <%= txn.status %>
                                </small>
                              <% } %>
                            </div>
                          </div>
                          <div class="text-end ms-3">
                            <h4 class="mb-1 text-success fw-bold">+₹<%= txn.refundAmount.toLocaleString('en-IN') %></h4>
                            <span class="credit-badge">
                              <i class="fas fa-check-circle me-1"></i>Credited
                            </span>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                </div>
              <% } else { %>
                <div class="no-transactions">
                  <i class="fas fa-inbox fa-4x mb-3"></i>
                  <h4 class="mb-2">No transactions yet</h4>
                  <p class="mb-0">Your wallet history will appear here once you receive refunds or credits.</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>