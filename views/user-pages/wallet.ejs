<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Wallet | TechCart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <!-- Header and Sidebar -->
  <%- include('partials/header') %>
  <%- include('partials/accountSidebar') %>

  <!-- Wallet Content Wrapper -->
  <div class="content-wrapper" style="margin-left: 250px; padding: 20px;">
    <div class="container-fluid">
      <h3 class="mb-4">Welcome! <%= user?.firstName || "Customer" %></h3>

      <!-- Wallet Card -->
      <div class="card p-4 shadow-sm">
        <h5 class="mb-4">Wallet</h5>

        <!-- Wallet Balance -->
        <div class="mb-4 p-3 bg-light text-center rounded">
          <h6>Wallet Balance</h6>

          <% 
            let balance = 0;
            if (wallet && wallet.length > 0) {
              wallet.forEach(item => {
                if (item.type === 'credit') balance += item.items?.[0]?.subtotal || 0;
                else if (item.type === 'debit') balance -= item.items?.[0]?.subtotal || 0;
              });
            }
          %>

          <h4>Available Wallet Balance : ₹<%= balance.toLocaleString('en-IN') %></h4>
        </div>

        <!-- Wallet Transaction History -->
        <h5 class="mb-3">Wallet Transaction History</h5>

        <% if (wallet && wallet.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr class="table-secondary text-center">
                <th>Transaction ID</th>
                <th>Transaction Date</th>
                <th>Amount</th>
                <th>Type</th>
              </tr>
            </thead>
            <tbody>
              <% wallet.forEach((txn, index) => { %>
                <tr class="text-center">
                  <td><%= txn.orderId %></td>
                  <td><%= new Date(txn.refundDate).toLocaleDateString('en-IN') %></td>
                  <td>₹<%= (txn.items?.[0]?.subtotal || 0).toLocaleString('en-IN') %></td>
                  <td>
                    <% if (txn.type === 'credit') { %>
                      <span class="text-success fw-semibold">Amount Credited</span>
                    <% } else { %>
                      <span class="text-danger fw-semibold">Amount Debited</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } else { %>
          <p class="text-center text-muted">No wallet transactions found.</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
