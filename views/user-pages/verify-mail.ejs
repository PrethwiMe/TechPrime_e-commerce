<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/vrifyUser.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
  body {
    background-color: #f8f9fa;
    font-family: Arial, sans-serif;
  }

  .otp-container {
    max-width: 500px;
    margin: 80px auto;
    background: white;
    padding: 40px 35px;
    border-radius: 12px;
    box-shadow: 0px 4px 18px rgba(0, 0, 0, 0.06);
  }

  .otp-container h2 {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #222;
  }

  .otp-container p {
    color: #555;
    margin-bottom: 25px;
  }

  .otp-container input {
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 15px;
    outline: none;
    width: 100%;
    transition: border-color 0.2s;
  }

  .otp-container input:focus {
    border-color: #000;
  }

  .otp-container button {
    background: black;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 6px;
    font-size: 15px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .otp-container button:hover {
    background: #333;
  }

  .otp-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;
  }

  .otp-actions a {
    text-decoration: none;
    color: #000;
    font-size: 14px;
    transition: color 0.2s;
  }

  .otp-actions a:hover {
    color: #555;
  }
</style>

<div class="otp-container">
  <h2>Verify Your Email</h2>
  <p>We've sent an OTP to your registered email address.</p>

  <% if (error) { %>
    <div style="color: red; margin-bottom: 20px;"><%= error %></div>
  <% } %>

  <!-- OTP Form -->
  <form id="verifyForm">
    <input type="hidden" id="email" value="<%= email %>">
    <input 
      type="text" 
      id="otp"
      placeholder="Enter your OTP" 
      required
    >
    <button class="mt-2" type="submit">Verify Email</button>
  </form>

  <div class="otp-actions">
    <a href="/login">Back to Login</a>
    <button 
      type="button" 
      id="resendOtpBtn"
      data-email="<%= email %>"
    >
      Resend OTP
    </button>
  </div>
</div>

<script>
  // Resend OTP handler
  document.getElementById('resendOtpBtn').addEventListener('click', async () => {
    const email = document.getElementById('resendOtpBtn').dataset.email;

    Swal.fire({
      title: 'Sending OTP...',
      text: 'Please wait while we resend the OTP.',
      icon: 'info',
      showConfirmButton: false,
      allowOutsideClick: false,
      didOpen: () => Swal.showLoading()
    });

    try {
      const response = await fetch('/resend-otp', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email })
      });

      const result = await response.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'OTP Sent!',
          text: 'A new OTP has been sent to your email.',
          timer: 2000,
          showConfirmButton: false
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Failed!',
          text: result.error || 'Unable to resend OTP. Try again.',
        });
      }
    } catch {
      Swal.fire({
        icon: 'error',
        title: 'Server Error',
        text: 'Something went wrong while resending the OTP.',
      });
    }
  });

  // OTP verification handler
  document.getElementById("verifyForm").addEventListener("submit", async (event) => {
    event.preventDefault();

    const email = document.getElementById("email").value;
    const otp = document.getElementById("otp").value;

    if (!otp.trim()) {
      return Swal.fire({
        icon: 'warning',
        title: 'Missing OTP',
        text: 'Please enter your OTP before verifying.'
      });
    }

    Swal.fire({
      title: 'Verifying...',
      text: 'Please wait while we verify your OTP.',
      icon: 'info',
      showConfirmButton: false,
      allowOutsideClick: false,
      didOpen: () => Swal.showLoading()
    });

    try {
      const res = await fetch("/verify-email", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email, otp })
      });
      const data = await res.json();

      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: 'Email Verified!',
          text: data.message || 'Your email has been successfully verified.',
          timer: 2000,
          showConfirmButton: false
        });

        setTimeout(() => {
          window.location.href = "/login";
        }, 1800);
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Verification Failed',
          text: data.message || 'Invalid OTP. Please try again.'
        });
      }
    } catch {
      Swal.fire({
        icon: 'error',
        title: 'Server Error',
        text: 'Something went wrong while verifying OTP.'
      });
    }
  });
</script>

<%- include('partials/footer') %>
