<div class="d-flex">
  <%- include('partials/sidebar') %>

  <div class="flex-grow-1 bg-white text-dark" style="min-height: 100vh;">
    <!-- Topbar -->
    <div class="border-bottom shadow-sm">
      <%- include('partials/topbar') %>
    </div>

    <!-- Page Content -->
    <div class="p-4">
      <!-- Header & Search -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold mb-0">Order Lists</h3>
        <div class="d-flex gap-3 align-items-center">
          <form id="searchForm" class="d-flex" method="GET" action="/admin/orders" role="search">
            <div class="input-group">
              <input
                type="text"
                id="searchInput"
                name="search"
                class="form-control"
                placeholder="Search by ID, Name, or Product..."
                value="<%= typeof search !== 'undefined' ? search : '' %>"
              />
              <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search"></i>
              </button>
            </div>
          </form>
          <button id="clearSearchBtn" class="btn btn-outline-secondary">Clear</button>
        </div>
      </div>

      <!-- Orders Table -->
      <div class="table-responsive rounded shadow">
        <table class="table table-bordered table-hover align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>Order ID</th>
              <th>Buyer Name</th>
              <th>Address</th>
              <th>Date</th>
              <th>Product</th>
              <th>Variant</th>
              <th>Total</th>
              <th>Status</th>
              <th>Return Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><%= order.orderId %></td>
                <td><%= order.buyer.fullName %></td>
                <td>
                  <%= order.selectedAddress.line1 %>, 
                  <%= order.selectedAddress.city %>, 
                  <%= order.selectedAddress.state %> - 
                  <%= order.selectedAddress.pincode %>
                </td>
                <td><%= new Date(order.createdAt).toLocaleString() %></td>
                <td>
                  <% order.items.forEach(item => { %>
                    <div><%= item.productName %> (<%= item.productCompany %>)</div>
                  <% }) %>
                </td>
                <td>
                  <% order.items.forEach(item => { %>
                    <% if (item.variantDetails) { %>
                      <div>
                        <%= item.variantDetails.processor %>, 
                        <%= item.variantDetails.ram %>, 
                        <%= item.variantDetails.storage %>, 
                        <%= item.variantDetails.color %>
                      </div>
                    <% } %>
                  <% }) %>
                </td>
                <td>₹ <%= parseFloat(order.total).toLocaleString() %></td>
                <td>
                  <select class="form-select form-select-sm order-status" data-id="<%= order._id %>" <%= order.returnOrder ? '' : '' %>>
                    <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                    <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                    <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                    <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                  </select>
                </td>
                <td>
                  <% if (order.returnOrder) { %>
                    <span class="badge <%= order.returnOrder === 'Pending' ? 'bg-warning text-dark' : order.returnOrder === 'Accepted' ? 'bg-success text-white' : 'bg-danger text-white' %>">
                      <%= order.returnOrder %>
                    </span>
                  <% } else { %>
                    <span>Not Returned</span>
                  <% } %>
                </td>
                <td>
                  <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editOrderModal-<%= order._id %>">
                    <i class="bi bi-eye"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<!-- Order Modals -->
<% orders.forEach(order => { %>
  <div class="modal fade" id="editOrderModal-<%= order._id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
      <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
        <!-- Header -->
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title fw-bold">
            <i class="bi bi-receipt me-2"></i> Order #<%= order.orderId %>
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Body -->
        <div class="modal-body p-4">
          <div class="row g-4">
            <!-- Order Summary -->
            <div class="col-md-4 border-end">
              <h6 class="fw-bold text-secondary mb-3">Order Summary</h6>
              <ul class="list-group list-group-flush small">
                <li class="list-group-item"><strong>Order ID:</strong> <%= order.orderId %></li>
                <li class="list-group-item"><strong>Date:</strong> <%= new Date(order.createdAt).toLocaleString() %></li>
                <li class="list-group-item"><strong>Payment:</strong> <%= order.paymentMethod %></li>
                <li class="list-group-item"><strong>Status:</strong> <span class="badge bg-info"><%= order.status %></span></li>
                <li class="list-group-item"><strong>Subtotal:</strong> ₹ <%= parseFloat(order.subtotal).toLocaleString() %></li>
                <li class="list-group-item"><strong>Tax:</strong> ₹ <%= parseFloat(order.tax).toLocaleString() %></li>
                <li class="list-group-item"><strong>Delivery:</strong> ₹ <%= parseFloat(order.deliveryCharge).toLocaleString() %></li>
                <% if(order.couponCode){ %>
                  <li class="list-group-item"><strong>Coupon:</strong> <%= order.couponCode %></li>
                <% } %>
                <li class="list-group-item"><strong>Total:</strong> ₹ <%= parseFloat(order.total).toLocaleString() %></li>
                <li class="list-group-item"><strong>Items:</strong> <%= order.items.length %></li>
              </ul>
            </div>

            <!-- Customer Details -->
            <div class="col-md-4 border-end">
              <h6 class="fw-bold text-secondary mb-3">Customer</h6>
              <ul class="list-group list-group-flush small">
                <li class="list-group-item"><strong>Buyer:</strong> <%= order.buyer.fullName %></li>
                <li class="list-group-item"><strong>Email:</strong> <%= order.buyer.email %></li>
                <li class="list-group-item"><strong>Phone:</strong> <%= order.buyer.phone %></li>
                <li class="list-group-item">
                  <strong>Delivery Address:</strong><br>
                  <%= order.selectedAddress.fullName %><br>
                  <%= order.selectedAddress.line1 %>, <%= order.selectedAddress.city %><br>
                  <%= order.selectedAddress.state %> - <%= order.selectedAddress.pincode %><br>
                  <small>Phone: <%= order.selectedAddress.phone %></small>
                </li>
              </ul>
            </div>

            <!-- Order Items and Return Details -->
            <div class="col-md-4">
              <h6 class="fw-bold text-secondary mb-3">Order Items</h6>
              <div class="table-responsive small">
                <table class="table table-sm align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Product</th>
                      <th>Qty</th>
                      <th>Price</th>
                      <th>Subtotal</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.items.forEach(item => { %>
                      <tr>
                        <td>
                          <img src="<%= item.firstImage %>" 
                               class="rounded me-2 border" 
                               style="width:40px;height:40px;object-fit:cover;">
                          <div><%= item.productName %></div>
                          <small class="text-muted"><%= item.variantDetails.processor %>, <%= item.variantDetails.ram %></small>
                        </td>
                        <td><%= item.quantity %></td>
                        <td>₹ <%= item.price.toLocaleString() %></td>
                        <td>₹ <%= (item.quantity * item.price).toLocaleString() %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <h6 class="fw-bold text-secondary mt-4 mb-3">Return Details</h6>
              <ul class="list-group list-group-flush small">
                <li class="list-group-item">
                  <strong>Return Status:</strong> 
                  <% if (order.returnOrder) { %>
                    <span class="badge <%= order.returnOrder === 'Pending' ? 'bg-warning text-dark' : order.returnOrder === 'Accepted' ? 'bg-success text-white' : 'bg-danger text-white' %>">
                      <%= order.returnOrder %>
                    </span>
                  <% } else { %>
                    <span>Not Returned</span>
                  <% } %>
                </li>
                <% if (order.returnOrder) { %>
                  <li class="list-group-item"><strong>Return Reason:</strong> <%= order.returnReason || 'N/A' %></li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <div class="modal-footer bg-light d-flex justify-content-between">
          <% if (order.returnOrder) { %>
            <select class="form-select form-select-sm return-action-select" data-id="<%= order._id %>" data-reason="<%= order.returnReason %>">
              <option value="Pending" <%= order.returnOrder === 'Pending' ? 'selected' : '' %>>Pending</option>
              <option value="Accepted" <%= order.returnOrder === 'Accepted' ? 'selected' : '' %>>Accepted</option>
              <option value="Rejected" <%= order.returnOrder === 'Rejected' ? 'selected' : '' %>>Rejected</option>
            </select>
          <% } %>
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i> Close
          </button>
        </div>
      </div>
    </div>
  </div>
<% }) %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <script>
    // Clear Search Button
    document.getElementById('clearSearchBtn')?.addEventListener('click', function(e) {
      e.preventDefault();
      window.location.href = '/admin/orders';
    });

    // Handle status change via AJAX
    document.querySelectorAll('.order-status').forEach(select => {
      select.addEventListener('change', async function() {
        if (this.disabled) return; // Prevent changes if disabled
        const orderId = this.dataset.id;
        const status = this.value;

        try {
          const response = await axios.post('/admin/order/updateOrderStatus', { orderId, status });

          if (response.data.success) {
            Swal.fire({
              icon: 'success',
              title: 'Status Updated',
              text: `Order status changed to "${status}"`,
              timer: 1500,
              showConfirmButton: false,
              toast: true,
              position: 'top-end'
            });
          }
        } catch (err) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to update status!',
            toast: true,
            position: 'top-end'
          });
          console.error(err);
        }
      });
    });

    // Handle Return Action Dropdown
    document.querySelectorAll('.return-action-select').forEach(select => {
      select.addEventListener('change', async function() {
        const orderId = this.dataset.id;
        const returnReason = this.dataset.reason;
        const returnStatus = this.value;

        if (!returnStatus) return; // Ignore if no valid status is selected

        const actionText = returnStatus.toLowerCase();
        const result = await Swal.fire({
          title: `${actionText.charAt(0).toUpperCase() + actionText.slice(1)} Return Request`,
          text: `Are you sure you want to set the return status to "${returnStatus}" for order ${orderId}? Reason: ${returnReason || 'N/A'}`,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: returnStatus === 'Accepted' ? '#28a745' : returnStatus === 'Rejected' ? '#dc3545' : '#ffc107',
          cancelButtonColor: '#6c757d',
          confirmButtonText: `Yes, set to ${returnStatus}`,
          cancelButtonText: 'No, cancel'
        });

        if (result.isConfirmed) {
          try {
            const response = await axios.post('/admin/orders/update-return-status', {
              orderId,
              returnStatus,
              returnReason
            });

            if (response.data.success) {
              await Swal.fire({
                icon: 'success',
                title: `Return ${returnStatus}`,
                text: `The return status has been set to ${returnStatus}.`,
                timer: 1500,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
              });
              window.location.reload();
            } else {
              await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: `Failed to set return status to ${returnStatus}.`,
                toast: true,
                position: 'top-end'
              });
            }
          } catch (error) {
            console.error(`Error setting return status to ${returnStatus}:`, error);
            await Swal.fire({
              icon: 'error',
              title: 'Error',
              text: `An error occurred while setting the return status to ${returnStatus}.`,
              toast: true,
              position: 'top-end'
            });
          }
        }

        // Reset dropdown to current status to reflect server state
        this.value = returnStatus;
      });
    });
  </script>

  <style>
    .table thead th {
      border-top: none;
      border-bottom: 2px solid #fff;
    }
    .modal-dialog-right {
      position: fixed;
      top: 0;
      right: 0;
      margin: 0;
      height: 100%;
      display: flex;
      align-items: center;
    }
    .return-action-select {
      width: 200px;
      border: 1px solid #dee2e6;
      border-radius: 0.5rem;
      background-color: #fff;
      transition: all 0.2s ease;
    }
    .return-action-select:hover {
      border-color: #0d6efd;
      box-shadow: 0 0 5px rgba(13, 110, 253, 0.3);
    }
    .return-action-select:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
      outline: none;
    }
    .return-action-select option[value="Pending"] {
      color: #856404;
      background-color: #fff3cd;
    }
    .return-action-select option[value="Accepted"] {
      color: #28a745;
      background-color: #e6f4ea;
    }
    .return-action-select option[value="Rejected"] {
      color: #dc3545;
      background-color: #f8d7da;
    }
    .order-status:disabled {
      background-color: #e9ecef;
      cursor: not-allowed;
      opacity: 0.65;
    }
    @media (max-width: 768px) {
      .d-flex { flex-direction: column; }
      .form-select, .input-group { width: 100% !important; }
      .modal-dialog-right { position: relative; width: 100%; margin: 0 auto; }
      .return-action-select { width: 100%; }
    }
  </style>
</div>