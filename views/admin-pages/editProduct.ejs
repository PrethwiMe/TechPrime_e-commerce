<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Product | TechPrime Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.min.css" rel="stylesheet" />

  <style>
    body {
      background: #f1f5f9;
      font-family: 'Segoe UI', system-ui, sans-serif;
    }

    /* Perfect layout with fixed sidebar & topbar */
    @media (min-width: 993px) {
      .main-content { margin-left: 260px !important; }
    }
    body { padding-top: 65px !important; }

    .edit-product-card {
      background: white;
      border-radius: 18px;
      box-shadow: 0 12px 40px rgba(0,0,0,0.12);
      border: 1px solid #e2e8f0;
      overflow: hidden;
    }

    .card-header-custom {
      background: linear-gradient(135deg, #0f172a, #1e293b);
      color: white;
      padding: 2rem;
      border: none;
    }

    .form-label {
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 0.6rem;
      font-size: 0.95rem;
    }

    .form-control, .form-select {
      border-radius: 14px;
      padding: 0.75rem 1rem;
      border: 1.5px solid #cbd5e1;
      font-size: 0.95rem;
    }

    .form-control:focus, .form-select:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 0 0.25rem rgba(59,130,246,0.2);
    }

    /* Image Slots - Beautiful Cards */
    .image-slot {
      height: 320px;
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
      border: 2px dashed #94a3b8;
    }

    .image-slot.filled {
      border: none;
    }

    .image-slot.empty {
      background: #f8fafc;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .image-slot .card-img-top {
      height: 100%;
      object-fit: cover;
    }

    .delete-btn {
      background: rgba(220, 53, 69, 0.95);
      color: white;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      font-size: 1.4rem;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(220,53,69,0.4);
      transition: all 0.2s ease;
    }

    .delete-btn:hover {
      transform: scale(1.15);
      background: #dc3545;
    }

    .add-btn {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      font-size: 2rem;
      font-weight: bold;
      background: #3b82f6;
      color: white;
      border: none;
      box-shadow: 0 8px 25px rgba(59,130,246,0.3);
      transition: all 0.3s ease;
    }

    .add-btn:hover {
      transform: translateY(-5px) scale(1.1);
      box-shadow: 0 15px 35px rgba(59,130,246,0.4);
    }

    /* Variant Blocks */
    .variant-block {
      background: #f8fafc;
      border: 1px dashed #94a3b8;
      border-radius: 16px;
      padding: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .variant-block h5 {
      color: #3b82f6;
      font-weight: 700;
      margin-bottom: 1.2rem;
    }

    /* Submit Button */
    #submitBtn {
      border-radius: 50px;
      padding: 0.9rem 3rem;
      font-weight: 600;
      font-size: 1.1rem;
      box-shadow: 0 8px 25px rgba(25,135,84,0.3);
      transition: all 0.3s ease;
    }

    #submitBtn:hover:not(:disabled) {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(25,135,84,0.4);
    }

    #submitBtn:disabled {
      background: #6c757d;
      border-color: #6c757d;
      opacity: 0.8;
    }

    /* Crop Modal */
    #cropModal .modal-dialog {
      max-width: 95vw;
      height: 90vh;
    }

    #cropModal .modal-content {
      height: 100%;
      border-radius: 18px;
      overflow: hidden;
    }

    #cropModal .modal-body {
      height: calc(100% - 120px);
      padding: 0;
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #imageToCrop {
      max-width: 100%;
      max-height: 100%;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .card-header-custom {
        padding: 1.5rem;
        text-align: center;
      }
      .image-slot {
        height: 280px;
      }
      .variant-block {
        padding: 1.3rem;
      }
      #submitBtn {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <div class="d-flex">
    <%- include('partials/sidebar') %>
    <div class="flex-grow-1 main-content">
      <%- include('partials/topBar') %>

      <div class="container-fluid p-4 p-md-5">
        <div class="edit-product-card">
          <div class="card-header-custom text-center">
            <h2 class="mb-0 fw-bold d-flex align-items-center justify-content-center gap-3">
              <i class="bi bi-pencil-square fs-1"></i>
              EDIT PRODUCT
            </h2>
          </div>

          <div class="p-4 p-md-5">
            <div id="errorAlert" class="alert alert-danger d-none mb-4"></div>

            <form id="productForm" action="/admin/edit-product/<%= product._id %>" method="POST" enctype="multipart/form-data">
              <!-- Product Info -->
              <div class="row g-4 mb-4">
                <div class="col-md-6">
                  <label class="form-label">Product Name</label>
                  <input type="text" name="name" class="form-control" value="<%= product.name %>" required />
                </div>
                <div class="col-md-6">
                  <label class="form-label">Company Details</label>
                  <input type="text" name="companyDetails" class="form-control" value="<%= product.companyDetails %>" required />
                </div>
              </div>

              <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="4" required><%= product.description %></textarea>
              </div>

              <!-- Images Section -->
              <div class="mb-5">
                <h4 class="fw-bold text-primary mb-4">
                  <i class="bi bi-images"></i> Product Images (Exactly 3 Required)
                </h4>
                <div class="row g-4" id="imagesContainer">
                  <% const maxSlots = 3; %>
                  <% const numExisting = (product.images || []).length; %>
                  <% for(let i = 0; i < maxSlots; i++) { %>
                    <div class="col-md-4">
                      <div class="image-slot <%= i < numExisting ? 'filled' : 'empty' %> h-100" data-index="<%= i %>">
                        <% if(i < numExisting) { %>
                          <div class="position-relative">
                            <img src="<%= product.images[i] %>" class="card-img-top" alt="Product Image">
                            <button type="button" class="delete-btn position-absolute top-0 end-0 m-3 z-3">×</button>
                          </div>
                          <input type="hidden" class="existing-input" data-slot="<%= i %>" value="<%= product.images[i] %>"/>
                        <% } else { %>
                          <div class="card-body text-center">
                            <button type="button" class="btn add-btn shadow-lg">+</button>
                            <p class="mt-3 text-muted fw-medium">Click to add image</p>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>

              <input type="file" id="imageUploader" class="d-none" accept="image/*" />

              <!-- Product Details -->
              <div class="row g-4 mb-5">
                <div class="col-md-4">
                  <label class="form-label">Original Price</label>
                  <input type="number" name="originalPrice" class="form-control" step="0.01" min="0" value="<%= product.originalPrice %>" required />
                </div>
                <div class="col-md-4">
                  <label class="form-label">Category</label>
                  <select name="categoriesId" class="form-select" required>
                    <% categories.forEach((cat) => { %>
                      <option value="<%= cat._id %>" <%= String(cat._id) === String(product.categoriesId) ? "selected" : "" %>><%= cat.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Package Items</label>
                  <input type="text" name="packageItems" class="form-control" value="<%= product.packageItems %>" required />
                </div>
              </div>

              <div class="row g-4 mb-5">
                <div class="col-md-3">
                  <label class="form-label">Operating System</label>
                  <input type="text" name="OS" class="form-control" value="<%= product.OS %>" required />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Dimensions</label>
                  <input type="text" name="dimension" class="form-control" value="<%= product.dimension %>" required />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Series</label>
                  <input type="text" name="series" class="form-control" value="<%= product.series %>" required />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Status</label>
                  <select name="isActive" class="form-select">
                    <option value="true" <%= product.isActive ? "selected" : "" %>>Active</option>
                    <option value="false" <%= !product.isActive ? "selected" : "" %>>Inactive</option>
                  </select>
                </div>
              </div>

              <hr class="my-5 border-secondary">

              <h4 class="fw-bold text-primary mb-4">
                <i class="bi bi-box2"></i> Variant Details
              </h4>

              <% if (product.fullProduct && product.fullProduct.length > 0) { %>
                <% product.fullProduct.forEach((variant, idx) => { %>
                  <div class="variant-block">
                    <h5 class="fw-bold text-success mb-4">Variant <%= idx + 1 %></h5>
                    <input type="hidden" name="variants[<%= idx %>][_id]" value="<%= variant._id %>">
                    <div class="row g-3">
                      <div class="col-md-3"><label class="form-label">Processor</label><input type="text" name="variants[<%= idx %>][processor]" class="form-control" value="<%= variant.processor %>" required></div>
                      <div class="col-md-3"><label class="form-label">RAM</label><input type="text" name="variants[<%= idx %>][ram]" class="form-control" value="<%= variant.ram %>" required></div>
                      <div class="col-md-3"><label class="form-label">Storage</label><input type="text" name="variants[<%= idx %>][storage]" class="form-control" value="<%= variant.storage %>" required></div>
                      <div class="col-md-3"><label class="form-label">Graphics</label><input type="text" name="variants[<%= idx %>][graphics]" class="form-control" value="<%= variant.graphics %>" required></div>
                      <div class="col-md-3"><label class="form-label">Color</label><input type="text" name="variants[<%= idx %>][color]" class="form-control" value="<%= variant.color %>" required></div>
                      <div class="col-md-3"><label class="form-label">Display</label><input type="text" name="variants[<%= idx %>][display]" class="form-control" value="<%= variant.display %>" required></div>
                      <div class="col-md-3"><label class="form-label">Price</label><input type="number" name="variants[<%= idx %>][price]" class="form-control" step="0.01" min="0" value="<%= variant.price %>" required></div>
                      <div class="col-md-3"><label class="form-label">Stock</label><input type="number" name="variants[<%= idx %>][stock]" class="form-control" min="0" value="<%= variant.stock %>" required></div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="text-center py-5 text-muted">
                  <i class="bi bi-exclamation-triangle fs-1"></i>
                  <p class="mt-3">No variants available for this product.</p>
                </div>
              <% } %>

              <div class="text-end mt-5">
                <button type="submit" class="btn btn-success px-5 py-3 shadow-lg" id="submitBtn">
                  <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                  Update Product
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Crop Modal -->
  <div class="modal fade" id="cropModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title">Crop Image (Recommended: 800×800)</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body p-0">
          <img id="imageToCrop" alt="Crop"/>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary px-4" id="cropBtn">Crop & Apply</button>
        </div>
      </div>
    </div>
  </div>

  <!-- All your original scripts — 100% untouched -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
  <script>
    // YOUR ORIGINAL SCRIPT — COMPLETELY UNTOUCHED
    const imagesContainer = document.getElementById("imagesContainer");
    const uploader = document.getElementById("imageUploader");
    const imageToCrop = document.getElementById("imageToCrop");
    const cropModal = new bootstrap.Modal(document.getElementById("cropModal"));
    let cropper, currentFile, currentSlot;
    const submitBtn = document.getElementById("submitBtn");
    const form = document.getElementById("productForm");
    const spinner = submitBtn.querySelector('.spinner-border');

    let filledSlots = new Set();
    <% for(let i = 0; i < (product.images || []).length; i++) { %>
      filledSlots.add(<%= i %>);
    <% } %>

    function updateImageCount() {
      const totalFilled = filledSlots.size;
      if (totalFilled !== 3) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = `<span class="spinner-border spinner-border-sm d-none" role="status"></span>Update Product (Need Exactly 3 Images - Currently: ${totalFilled})`;
      } else {
        submitBtn.disabled = false;
        submitBtn.innerHTML = `<span class="spinner-border spinner-border-sm d-none" role="status"></span>Update Product`;
      }
    }
    updateImageCount();

    document.getElementById("cropModal").addEventListener("shown.bs.modal", () => {
      if (cropper) cropper.destroy();
      cropper = new Cropper(imageToCrop, { viewMode: 1, autoCropArea: 1, responsive: true, background: false, guides: true });
    });

    document.getElementById("cropBtn").addEventListener("click", () => {
      cropper.getCroppedCanvas().toBlob((blob) => {
        const slotIndex = parseInt(currentSlot.dataset.index);
        currentSlot.classList.remove('empty');
        currentSlot.classList.add('filled');
        const imgUrl = URL.createObjectURL(blob);
        currentSlot.innerHTML = `
          <div class="position-relative">
            <img src="${imgUrl}" class="card-img-top" alt="Product Image">
            <button type="button" class="delete-btn position-absolute top-0 end-0 m-3 z-3">×</button>
          </div>
        `;
        currentSlot._blob = blob;
        filledSlots.add(slotIndex);
        cropper.destroy();
        cropModal.hide();
        uploader.value = "";
        currentSlot = null;
        updateImageCount();
      }, "image/jpeg");
    });

    imagesContainer.addEventListener("click", (e) => {
      if (e.target.classList.contains("add-btn")) {
        currentSlot = e.target.closest(".image-slot");
        uploader.click();
      }
      if (e.target.classList.contains("delete-btn")) {
        e.stopPropagation();
        const slot = e.target.closest(".image-slot");
        const slotIndex = parseInt(slot.dataset.index);
        Swal.fire({
          title: 'Are you sure?',
          text: `This image at position ${slotIndex + 1} will be removed!`,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#3085d6',
          confirmButtonText: 'Yes, delete it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            const existingInput = slot.querySelector('.existing-input');
            if (existingInput) existingInput.remove();
            delete slot._blob;
            slot.innerHTML = `
              <div class="card-body text-center">
                <button type="button" class="btn add-btn shadow-lg">+</button>
                <p class="mt-3 text-muted fw-medium">Click to add image</p>
              </div>
            `;
            slot.classList.remove('filled');
            slot.classList.add('empty');
            filledSlots.delete(slotIndex);
            updateImageCount();
          }
        });
      }
    });

    uploader.addEventListener("change", (e) => {
      if (!e.target.files.length || !currentSlot) return;
      currentFile = e.target.files[0];
      const reader = new FileReader();
      reader.onload = () => {
        imageToCrop.src = reader.result;
        cropModal.show();
      };
      reader.readAsDataURL(currentFile);
    });

    document.getElementById("productForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      updateImageCount();
      if (filledSlots.size !== 3) {
        Swal.fire({
          icon: "error",
          title: "Image Requirement Not Met",
          text: `You must have exactly 3 images. Currently: ${filledSlots.size}`
        });
        return;
      }

      submitBtn.disabled = true;
      spinner.classList.remove('d-none');
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = `<span class="spinner-border spinner-border-sm" role="status"></span> Updating Product...`;

      const formData = new FormData(form);
      const otherInputs = form.querySelectorAll('input:not(.existing-input), textarea, select');
      otherInputs.forEach(input => {
        if (input.name) formData.append(input.name, input.value);
      });

      for (let i = 0; i < 3; i++) {
        const slot = imagesContainer.querySelector(`[data-index="${i}"]`);
        if (slot.classList.contains('filled')) {
          const existingInput = slot.querySelector('.existing-input');
          if (existingInput) {
            formData.append(`slot${i}`, existingInput.value);
          } else if (slot._blob) {
            formData.append(`slot${i}`, slot._blob, `image${i}.jpg`);
          }
        }
      }

      try {
        const res = await axios.post(form.action, formData, {
          headers: { "Content-Type": "multipart/form-data" }
        });
        if (res.data.success) {
          Swal.fire({ icon: "success", title: "Updated!", text: "Product updated successfully." }).then(() => {
            window.location.href = "/admin/products";
          });
        } else {
          throw new Error(res.data.message || "Unknown error");
        }
      } catch (err) {
        Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.message || err.message });
      } finally {
        submitBtn.disabled = false;
        spinner.classList.add('d-none');
        submitBtn.innerHTML = originalText;
      }
    });
  </script>
</body>
</html>