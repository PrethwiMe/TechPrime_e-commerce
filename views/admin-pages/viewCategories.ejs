<!DOCTYPE html>
<html lang="en">

<head>
  <title>Manage Categories</title>
  <link rel="stylesheet" href="/stylesheets/adminDashboard.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

  <style>
    /* layout alignment */
    .admin-wrapper {
      display: flex;
      height: 100vh;
    }

    .sidebar-fixed {
      width: 250px;
      min-height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1030;
    }

    .main-content {
      margin-left: 250px;
      width: calc(100% - 250px);
    }

    .content-inner {
      padding: 20px;
      padding-top: 90px;
    }

    .dashboard-title {
      font-size: 24px;
      font-weight: 600;
    }

    /* toggle switch styling */
    .form-switch {
      display: inline-block;
      position: relative;
    }

    .form-switch input[type="checkbox"] {
      display: none;
    }

    .switch-slider {
      position: relative;
      display: inline-block;
      width: 50px;
      height: 26px;
      background-color: #ccc;
      border-radius: 50px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .switch-slider::before {
      content: "";
      position: absolute;
      width: 22px;
      height: 22px;
      left: 2px;
      top: 2px;
      background-color: white;
      border-radius: 50%;
      transition: transform 0.3s;
    }

    .form-switch input:checked+.switch-slider {
      background-color: #28a745;
    }

    .form-switch input:checked+.switch-slider::before {
      transform: translateX(24px);
    }

    .button-wrapper {
      display: flex;
      justify-content: end;
      gap: 10px;
      margin: 20px 30px 10px 0;
    }
  </style>
</head>

<body class="bg-light">

  <div class="admin-wrapper">
    <!-- Sidebar -->
    <div class="sidebar-fixed">
      <%- include('partials/sidebar') %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <%- include('partials/topBar.ejs') %>

      <!-- Topbar -->
      <div class="topbar">
        <h3 class="mt-4 ms-4">Manage Categories</h3>
      </div>

      <!-- Add/Edit Button Bar -->
      <div class="button-wrapper">
        <a href="/admin/categories" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Category
        </a>
       
      </div>

      <!-- Page content -->
      <div class="table-wrapper px-4">
        <table class="table table-bordered table-hover bg-white">
          

          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Category</th>
              <th>Description</th>
              <th>Status</th>
              <th>Edit</th> <!-- New Edit column header -->
              <th>Toggle</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((category, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td>
                <span class="badge <%= category.isActive == true ? 'bg-success' : 'bg-secondary' %>">
                  <%= category.isActive == true ? 'Enabled' : 'Disabled' %>
                </span>
              </td>

              <!-- New Edit Button -->
              <td class="text-center">
                <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-sm btn-outline-primary" title="Edit Category">
                  <i class="bi bi-pencil-square fs-5"></i>
                </a>
              </td>

              <td>
                <div class="form-switch">
                  <input type="checkbox" <%= category.isActive == true ? 'checked' : '' %> onchange="toggleCategoryStatus('<%= category._id %>', this)" id="toggle-<%= category._id %>" />
                  <label class="switch-slider" for="toggle-<%= category._id %>"></label>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>

        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script>
    async function toggleCategoryStatus(categoryId, checkbox) {
      try {
        const response = await fetch(`/admin/categories/switch/${categoryId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        });

        if (!response.ok) {
          throw new Error('Toggle failed');
        }

        // Optionally update UI â€” like changing badge text
        const row = checkbox.closest('tr');
        const badge = row.querySelector('.badge');

        if (checkbox.checked) {
          badge.classList.remove('bg-secondary');
          badge.classList.add('bg-success');
          badge.textContent = 'Enabled';
        } else {
          badge.classList.remove('bg-success');
          badge.classList.add('bg-secondary');
          badge.textContent = 'Disabled';
        }

      } catch (error) {
        console.error('Error toggling category:', error);
        checkbox.checked = !checkbox.checked; // rollback UI if error
      }
    }
  </script>

</body>

</html>