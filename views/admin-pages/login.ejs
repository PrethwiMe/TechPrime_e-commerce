<body>

  <nav class="navbar navbar-light bg-white px-5">
    <a class="navbar-brand fw-bold" href="#">TECHPRIME</a>
    <div>
      <select class="form-select form-select-sm">
        <option>English</option>
      </select>
     
    </div>
  </nav>
   


<!-- Custom admin login CSS (FIXED PATH) -->
<link rel="stylesheet" href="/stylesheets/adminLogin.css">

<!-- Main Content -->
<div class="admin-bg d-flex align-items-center justify-content-center" style="min-height: 100vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-5">
            <h3 class="text-center mb-4 fw-bold custom-heading">Admin Login</h3>

            <form action="/admin/getLoginData" method="POST">
              <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control form-control-lg"
                  id="email"
                  name="email"
                  placeholder="Enter Email Here"
                  
                />
              </div>
              <div class="form-group mb-4">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control form-control-lg"
                  id="password"
                  name="password"
                  placeholder="Enter Password Here"
                  
                />
              </div>

              <% if (typeof error !== 'undefined') { %>
                <p class="text-danger text-center"><%= error %></p>
              <% } %>

              <button type="submit" class="btn btn-primary btn-lg w-100">
                Login
              </button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
