<!DOCTYPE html>
<html lang="en">
<head>
  <title>Edit Category</title>
  <link rel="stylesheet" href="/stylesheets/adminDashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }
    @media (min-width: 993px) {
    .flex-grow-1 {
      margin-left: 260px !important;
    }
  }

  /* Push content below fixed topbar */
  body {
    padding-top: 65px !important;
  }

    .admin-wrapper {
      display: flex;
    }

    .sidebar-fixed {
      width: 250px;
      min-height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1030;
    }

    .main-content {
      margin-left: 250px;
      width: calc(100% - 250px);
    }

    .content-inner {
      padding: 30px;
      padding-top: 100px;
    }

    .form-section {
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    .form-section h3 {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <div class="admin-wrapper">
    <!-- Sidebar -->
    <div class="sidebar-fixed">
      <%- include('partials/sidebar') %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <%- include('partials/topBar') %>

      <div class="container content-inner">
        <div class="form-section">
          <h3>Edit Category</h3>

          <form action="/admin/categories/edit-req" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Category Name</label>
              <input
                type="text"
                name="name"
                class="form-control"
                id="name"
                value="<%= data.name %>"
              >
            </div>
            <input type="hidden" value="<%-data._id %>" name="_id">
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                name="description"
                class="form-control"
                id="description"
                rows="3"
              ><%= data.description %></textarea>
            </div>

              <%if (error) {%>
              <div class="mb-3 text-danger"><%-error %></div>
              
            <% }  %>

            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
