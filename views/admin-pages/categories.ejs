<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Category - TechPrime Admin</title>
  <link rel="stylesheet" href="/stylesheets/adminDashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

  <style>
    :root {
      --dark-primary: #1a1a2e;
      --dark-secondary: #16213e;
      --dark-accent: #0f3460;
      --border-color: #e5e7eb;
      --success-color: #10b981;
      --text-dark: #1f2937;
      --text-light: #6b7280;
    }

    body { margin: 0; background: white; }

    .admin-wrapper {
      display: flex;
      min-height: 100vh;
    }

    .sidebar-fixed {
      width: 250px;
      min-height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1030;
    }

    .main-content {
      margin-left: 250px;
      width: calc(100% - 250px);
      background: white;
      min-height: 100vh;
    }

    .content-inner {
      padding: 2rem;
      padding-top: 100px;
    }

    .form-section {
      background: white;
      padding: 2.5rem;
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      border: 1px solid var(--border-color);
      animation: fadeIn 0.5s ease;
    }

    .form-section-header {
      background: linear-gradient(135deg, var(--dark-primary) 0%, var(--dark-secondary) 100%);
      padding: 1.5rem;
      margin: -2.5rem -2.5rem 2rem -2.5rem;
      border-radius: 1rem 1rem 0 0;
    }

    .form-section-header h3 {
      color: white;
      font-size: 1.5rem;
      font-weight: 700;
      margin: 0;
    }

    .form-label { font-weight: 600; color: var(--text-dark); }
    .form-control, .form-select {
      border: 2px solid var(--border-color);
      border-radius: 0.5rem;
      padding: 0.875rem 1rem;
    }
    .btn-submit {
      background: linear-gradient(135deg, var(--dark-primary) 0%, var(--dark-secondary) 100%);
      color: white;
      border: none;
      padding: 0.875rem 2rem;
      border-radius: 0.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(26,26,46,0.3);
    }
    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(26,26,46,0.4);
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <div class="admin-wrapper">
    <!-- Sidebar -->
    <div class="sidebar-fixed">
      <%- include('partials/sidebar') %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <%- include('partials/topBar') %>

      <div class="container-fluid content-inner">
        <div class="form-section">
          <div class="form-section-header">
            <h3><i class="bi bi-folder-plus"></i> Add New Category</h3>
          </div>

          <form id="categoryForm">
            <div class="mb-3">
              <label for="name" class="form-label">
                <i class="bi bi-tag-fill"></i> Category Name
              </label>
              <input 
                type="text" 
                name="name" 
                class="form-control" 
                id="name" 
                placeholder="Enter category name (e.g., Electronics, Clothing)"
                required
              >
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">
                <i class="bi bi-text-paragraph"></i> Description
              </label>
              <textarea 
                name="description" 
                class="form-control" 
                id="description" 
                rows="4"
                placeholder="Provide a detailed description..."
              ></textarea>
            </div>

            <div class="mb-3">
              <div class="form-check form-switch">
                <input 
                  class="form-check-input" 
                  type="checkbox" 
                  id="status" 
                  name="isActive" 
                  checked
                >
                <label class="form-check-label" for="status">
                  <i class="bi bi-toggle-on"></i> Active Status
                </label>
              </div>
            </div>

            <div class="form-footer mt-4">
              <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle-fill"></i> Add Category
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- JS Files -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // Handle Category Form Submission
    document.getElementById('categoryForm').addEventListener('submit', async function (e) {
      e.preventDefault();

      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());
      data.isActive = formData.get('isActive') === 'on';

      try {
        const response = await fetch('/admin/categories/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          Swal.fire({
            icon: 'success',
            title: 'Category Added',
            text: result.message || 'Category has been added successfully!',
            confirmButtonColor: '#1a1a2e',
            timer: 2000,
            timerProgressBar: true
          }).then(() => {
            window.location.href = '/admin/view-categories'; // redirect after success
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: result.message || 'Something went wrong!',
            confirmButtonColor: '#1a1a2e'
          });
        }

      } catch (err) {
        Swal.fire({
          icon: 'error',
          title: 'Server Error',
          text: 'An unexpected error occurred. Please try again later.',
          confirmButtonColor: '#1a1a2e'
        });
        console.error(err);
      }
    });
  </script>

</body>
</html>
